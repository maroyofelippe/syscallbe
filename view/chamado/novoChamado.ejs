    <main id="conteudo">
      <h1>Abrir Chamados</h1>

      <form
        name="abrirChamado"
        id="abrirChamado"
        action="/chamado/newChamado"
        method="post"
      >
        <fieldset>
          <legend>Dados Pessoais</legend>
          <label for="nome" class="required">Nome</label><br />
          <input
            type="text"
            name="nome"
            id="nome"
            placeholder="Nome Completo"
            value=<%=usuario.nome%>
            disabled
          /><br /><br />

          <label for="email2" class="required">E-mail Institucional</label
          ><br /><br />
          <input
            type="text"
            name="email"
            id="email2"
            placeholder="Email Institucional"
            value=<%=usuario.email%>
            disabled
          />
        </fieldset>

        <fieldset>
          <legend>Sobre seu problema</legend>
          <table>
            <tr>
                <td><label for="tipoAmbiente2" class="required">Tipo Ambiente</label></td>
                <td><label for="localAmbiente2" class="required">Ambiente</label></td>
                <td><label for="tipoEquipamento2" class="required">Tipo de Equipamento</label></td>
                <td><label for="nomeEquipamento2" class="required">Nome do Equipamento</label></td>
            </tr>
            <tr>
                <td class="td1">
                    <select name="tipoAmbiente" id="tipoAmbiente2">
                        <option value="" selected disabled>Selecione um Tipo de Ambiente</option>
                        <% tipoAmbiente.forEach(function(tipoAmbiente){ %>
                            <option value=<%= tipoAmbiente.idTipoAmbiente %>> <%= tipoAmbiente.descricao%> </option>
                        <% }) %>                                
                    </select><br><br>
                </td>

                <td class="td1">                            
                    <select name="Ambiente_idAmbiente" id="localAmbiente2">
                        <option value="" selected disabled>Selecione um Local</option>
                        <% ambiente.forEach(function(ambiente){ %>
                            <option value=<%= ambiente.idAmbiente %>> <%= ambiente.predio%> - <%= ambiente.andar%> - <%= ambiente.sala%></option>
                        <% }) %>
                    </select><br><br>
                </td>

                <td class="td2">                            
                    <select name="TipoEquipamento_codTipoEquipamento" id="tipoEquipamento2">
                        <option value="" selected disabled>Selecione tipo de Equipamento</option>
                        <% tipoeqp.forEach(function(tipoeqp){ %>
                            <option value=<%= tipoeqp.codTipoEquipamento %>> <%= tipoeqp.descricao%> </option>
                        <% }) %>
                    </select><br><br>
                </td>

                <td class="td3">

                    <select name="Equipamento_idEquipamento" id="Equipamento">
                        <option value="" selected disabled>Selecione o Equipamento</option>
                        <% equipamento.forEach(function(equipamento){ %>
                            <option value=<%= equipamento.idEquipamento %>> <%= equipamento.descricao%> </option>
                        <% }) %>
                    </select><br><br>
                </td>
            </tr>
          </table>
          <label for="descricaoSolicitacao" class="required"
            >Descrição da Solicitação</label
          ><br />
          <textarea
            name="descricaoProblema"
            id="descricaoSolicitacao"
            cols="50"
            rows="20"
            placeholder="Descreva aqui sua solicitação com os detalhes desejados."
          ></textarea>
        </fieldset>
        <input type="submit" name="enviar" id="enviar" value="Enviar" />
        <input type="reset" name="limpar" id="limpar" value="Limpar" />
      </form>
    </main>

