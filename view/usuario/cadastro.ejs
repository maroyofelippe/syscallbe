    <main class="row main" style="margin-right: 0;">
        <!--Div conteúdo login-->
        <aside id="itens-cadastro" class="d-flex flex-column align-items-center col">
            <img src="../public/assets/img/LogoPequenaSysCallColorida.png" class="logo-cad-log" alt="">
            <h3 class="text-cad-log">Seja Bem-Vindo <br>de Volta!</h3>
    
            <div class="btn-cad-log">
                <a href="/login" class="btn-cad-log-link">Login</a>
            </div>
        </aside>

        <!--Formulário cadastro-->
        <section id="form-cadastro" class="d-flex flex-column justify-content-center align-items-start col-8">
            <form class="d-flex flex-column justify-content-around" method="post" action="/cadastro/usuario/inserir">
                <h3>Cadastre-se e tenha acesso aos chamados da sua instituição</h3>
                <div class="form-group">
                    <input type="text" name="nome" class="form-control input" id="exampleInputText" placeholder="Nome Completo">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control input" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Email Institucional">
                </div>
                <div class="row">
                    <div class="form-group col">
                        <select class="form-control select" name="TipoUsuario_codTipoUsuario" id="exampleFormControlSelect1">
                            <option value="0" selected>Selecione seu cargo</option>
                            <option value="1">Professor</option>
                            <option value="2">Aluno</option>
                        </select>
                    </div>
                    <div class="form-group col">
                        <input type="number" name="registro" id="exampleInputText2" class="form-control input" placeholder="Matrícula">
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col">
                        <input type="password" name="senha" class="form-control input" id="exampleInputPassword1" placeholder="Senha">
                    </div>
                    <div class="form-group col">
                        <input type="password" class="form-control input" id="exampleInputPassword2" placeholder="Confirme sua Senha">
                    </div>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input check" id="exampleCheck1" checked="checked">
                    <span class="checkmark"></span>
                    <label class="form-check-label" for="exampleCheck1">Eu concordo e aceito os <a href="./termosDeUso.html">termos de uso</a>.</label>
                </div>
                <button type="submit" class="btn btn-primary cad-login" >Cadastre-se</a></button>
            </form>
        </section>
